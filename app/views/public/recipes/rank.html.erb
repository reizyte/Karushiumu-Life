<!--レシピのお気に入り数ランキング画面-->
<div class="container">
  <% if customer_signed_in? %>
    <h4>人気のレシピ</h4>
    <div class="row">
      <% @recipes.each do |recipe| %>
        <%= render "public/recipes/recipe", recipe: recipe %>
      <% end %>
      <div class="w-100"></div>
      <div class="ml-auto"><%= paginate @recipes %></div>
    </div>
  <% else %>
    <%= render "public/customers/not_customer" %>
  <% end %>
</div>