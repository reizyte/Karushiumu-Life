<!--レシピのお気に入り数ランキング画面-->
<div class="container">
  <% if customer_signed_in? %>
    <h4>人気のレシピ</h4>
    <div class="row">
      <% @recipes.each do |recipe| %>
        <%= render "public/recipes/recipe", recipe: recipe %>
      <% end %>
      <div class="w-100"></div>
      <div class="ml-auto"><%= paginate @recipes %></div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-5">
       <%= image_tag "cooking_mama.png", size: "300x300" %>
      </div>
      <div class="col-7">
        <h5 class="mt-5">こちらは会員でない方は閲覧することができません。</h5>
         <%= link_to "レシピ一覧に戻る", recipes_path, class: "btn btn-primary mt-3" %>
       </div>
    </div>
  <% end %>
</div>