<div class="container">
  <h3>レシピ一覧</h3>
  <div class="row">
    <div class="col-lg-2" style="background-color: orange;">
      ジャンルのサイドバー
    </div>
    <div class="col-lg-10">
      <div class="recipe_box">
        <ul class="recipe_date">
          <% @recipes.each do |recipe| %>
          <li class="recipe_item list-unstyled border row">
            <p class="col-lg-4" style="background-color: skyblue;"><%= image_tag recipe.get_image, size:"200x200" %></p>
            
            <p><%= recipe.dish_name %></p>
            <p><%= recipe.explanation %></p>
            
            <% end %>
          </li>
        </ul>

      </div>

    </div>
  </div>
</div>
