<div class="container">
  <h3>レシピ一覧</h3>
    <%= search_form_for @q do |f| %>
      <div class="input-group">
        <%= f.search_field :dish_name_or_cooking_materials_material_name_cont, placeholder: "レシピ、材料で検索" %><%= f.submit '検索', class: "btn btn-primary" %>
      </div>
    <% end %>

  <div class="row">
    <div class="col-2" style="background-color: orange;">
      <table class="table">
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, recipes_path(genre_id: genre.id), class: "link text-dark" %></td>
            </tr>
          <% end %>

          <% @tag_list.each do |list| %>
          <tr>
            <td><%= link_to list.tag_name, recipes_search_path(tag_id: list.id) %>
                <%="(#{list.recipes.count})" %>
            </td>
          </tr>
          <% end %>

        </tbody>
      </table>
    </div>

    <div class="col-10">
      <div class="row">
        <% @recipes.each do |recipe| %>
          <%= render "public/customers/recipe", recipe: recipe %>
        <% end %>
      </div>
    </div>
  </div>
</div>
<%#= render "public/favorites/btn", recipe: @recipe %>