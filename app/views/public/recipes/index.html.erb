<div class="container">
  <h3>レシピ一覧</h3>
    <%= search_form_for @q do |f| %>
      <div class="input-group">
        <%= f.search_field :dish_name_or_cooking_materials_material_name_cont, placeholder: "レシピ、材料で検索" %><%= f.submit '検索', class: "btn btn-primary" %>
      </div>
    <% end %>

  <div class="row">
    <div class="col-2" style="background-color: orange;">
      <table class="table">
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= link_to genre.name, recipes_path(genre_id: genre.id), class: "link text-dark" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-10">
      <div class="row">
        <% @recipes.each do |recipe| %>
          <ul class="myrecipe_date col-3">
            <li class="myrecipe_item list-unstyled">
              <%= link_to recipe_path(recipe) do %>
                <div class="border">
                  <div class="mx-auto" style="width: 130px;"><%= image_tag recipe.get_image, size:"130x130" %></div>
                  <div class="h5 link text-dark" style="background-color: pink;">
                    <p class="text-center h4"><%= recipe.dish_name %></p><br>
                    <p class="text-center"><%= recipe.explanation %></p>
                    
                  </div>
                </div>
              <% end %>
            </li>
          </ul>
        <% end %>
      </div>
    </div>
  </div>
</div>
