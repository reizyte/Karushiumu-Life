<div class="container">
  <h3>会員編集画面</h3>
<%= render "layouts/errors", obj: @customer %>
    <%= form_with model: @customer, url: customer_path, method: :patch do |f| %>
      <div class="row">
        <div class="col-8">
        <table class="table table-borderless">
          <tbody>
            <tr>
              <td><%= f.label :profile_image, "アイコン画像" %></td>
              <td><%= f.file_field :profile_image, accept: "image/*" %></td>
            </tr>
            <tr>
              <td><%= f.label :name, "お名前" %></td>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>
            <tr>
              <td><%= f.label :introduction, "自己紹介" %></td>
              <td><%= f.text_area :introduction, class: "form-control introduction" %></td>
            </tr>
            <tr class="mt-4">
              <td></td>
              <td><%= f.submit "変更を保存", class: "btn btn-primary" %><%= link_to "退会する", confirm_unsubscribe_path, class: "ml-5 btn btn-danger" %></td>

            </tr>
          </tbody>
        </table>

      </div>
      </div>
    <% end %>

</div>
