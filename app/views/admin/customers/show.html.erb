<!--管理者側/会員詳細画面-->
<div class="container">
  <div class="row">
    <div class="col-6">
      <div class="mb-4 h3"><%= @customer.name %>さんの会員詳細</div>
      <table class="table table-borderless">
        <tbody class="h5">
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td>氏名</td>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>会員ステータス</td>
            <td><% if @customer.is_deleted %>
                  <p class="font-weight-bold text-secondary">退会</p>
                <% else %>
                  <p class="font-weight-bold text-success">有効</p>
                <% end%>
            </td>
          </tr>
        </tbody>
      </table>
      <%= link_to "会員編集する", edit_admin_customer_path(@customer), class: "ml-2 btn btn-success" %>
      <%= link_to "会員一覧に戻る", admin_root_path, class: "ml-5 btn btn-info" %>
    </div>
  </div>

  <h5 class="mt-5">投稿したレシピ</h5>
  <div class="row">
    <% if @recipes.exists? %>
      <% @recipes.each do |recipe| %>
        <%= render "public/recipes/recipe", recipe: recipe %>
      <% end %>
    <% else %>
      <p class="text-center">投稿したレシピはありません。</p>
    <% end %>
    <div class="w-100"></div>
    <div class="ml-auto"><%= paginate @recipes %></div>
  </div>
</div>