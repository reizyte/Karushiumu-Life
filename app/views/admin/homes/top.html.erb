<!--会員一覧画面（管理者TOP画面）-->
<div class="container">
  <%= render "layouts/flash_message" %>
  <h3>会員一覧</h3>
  <div class="row">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>会員名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
          <th></th>
        </tr>
      </thead>
      <% @customers.each do |customer| %>
      <tbody>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.name, admin_customer_path(customer) %></td>
          <td><%= customer.email %></td>
          <td>
              <% if customer.is_deleted %>
              <p class="font-weight-bold text-secondary">退会</p>
              <% else %>
              <p class="font-weight-bold text-success">有効</p>
              <% end%>
          </td>
          <td><%= link_to "詳細を見る",admin_customer_path(customer), class: "btn btn-info" %></td>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>