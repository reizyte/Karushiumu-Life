<div class="container">
  <h3>ジャンル管理</h3>
  <br>
  <h4>ジャンルの新規登録</h4>
  <%= render "form", genre: @genre %>
  <br>
  <h4>ジャンル一覧</h4>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>