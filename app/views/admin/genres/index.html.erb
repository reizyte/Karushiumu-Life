<div class="container">
  <%= render "layouts/flash_message" %>
  <h3 class="mb-5">ジャンル管理</h3>

  <h5>ジャンルの新規登録をする</h5>
  <%= form_with model:@genre, url: admin_genres_path, method: :post do |f| %>
	<%= f.label :name, "ジャンル名" %>
	<%= f.text_field :name %>
	<%= f.submit "新規登録", class: "btn btn-primary" %>
<% end %>
  <br>
  <h4>ジャンル一覧</h4>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>ジャンル名</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @genres.each do |genre| %>
      <tr>
        <td><%= genre.name %></td>
        <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>