<!--ジャンル一覧・ジャンル新規登録画面-->
<div class="container">
  <%= render "layouts/errors", obj: @genre %>
  <h3 class="mb-5">ジャンル管理</h3>
  <h5 class="mb-4">ジャンルの新規登録をする</h5>
  <%= form_with model:@genre, url: admin_genres_path, method: :post do |f| %>
    <%= f.label :name, "ジャンル名" %>
    <%= f.text_field :name %>
    <%= f.submit "新規登録", class: "btn btn-primary" %>
  <% end %>

  <div class="row">
    <h4 class="mt-5 mb-4">ジャンル一覧</h4>
    <div class="w-100"></div>
    <table class="col-7 table table-hover">
      <thead>
        <tr>
          <th>ジャンル名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success mr-3" %>
                <%= link_to "削除する", admin_genre_path(genre), method: :delete, class: "btn btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>